#Strip whitespace and join by newline
love_maybe_lines = ['Always    ', '     in the middle of our bloodiest battles  ', 'you lay down your arms', '           like flowering mines    ','\n' ,'   to conquer me home.    ']

love_maybe_lines_stripped = []
#Strip  whitespace for each element(line) of the list and append to new list
for line in love_maybe_lines:
  love_maybe_lines_stripped.append(line.strip())
#Join elements of the stripped list
love_maybe_fell = ','.join(love_maybe_lines_stripped)

#Print variables with a string - use \n to escape "
def poem_title_card(title, poet):
  return "The poem \"{}\" is written by {}.".format(title, poet)

